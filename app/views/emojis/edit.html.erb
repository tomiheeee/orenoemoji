<h1>Update this EMOJI</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @emoji do |f| %>

      <% if @emoji.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@emoji.errors.count, "error") %>.
        </div>
        <ul>
        <% @emoji.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
            </ul>
          </div>
      <% end %>

        <div id="img_field" onClick="$('#file').click()" >
      <!--画像があるときは画像を表示する  -->
          <% if @emoji.image.url.present? %>
            <%= image_tag(@emoji.image.url) %>　
          <% else %>
            <i class="fas fa-image"></i><i class="fas fa-file-upload add"></i>
          <% end %>
          </div>

          <p><%= f.label :name ,":emoji name:"%>
          <%= f.text_field :name, class: 'form-control' %></p>

          <div class="emoji-tags-field">
            <%= f.label "タグ" %>
            <ul id="emoji-tags">
            </ul>
            <%= hidden_field_tag :category_hidden,@category_list %>
          </div>

          <%= f.submit "変更を保存する", class: "btn btn-primary" %>
        <% end %>
  </div>
</div>
